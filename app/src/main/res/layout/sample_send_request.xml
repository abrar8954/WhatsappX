<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="This user is not in your friend list"
                android:textColor="#10a3cb"
                android:textSize="17sp"
                app:drawableTint="#10a3cb" />

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/thumbdown"
                android:drawablePadding="10dp"
                android:text="Report"
                android:textColor="#10a3cb"
                android:textSize="17sp"
                app:drawableTint="#10a3cb" />

            <TextView
                android:id="@+id/tvBlock"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/blockuser"
                android:drawablePadding="10dp"
                android:text="Block"
                android:textColor="#10a3cb"
                android:textSize="17sp"
                app:drawableTint="#10a3cb" />

            <TextView
                android:id="@+id/tvAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/adduser"
                android:drawablePadding="10dp"
                android:text="Add to Friend list"
                android:textColor="#10a3cb"
                android:textSize="17sp"
                app:drawableTint="#10a3cb" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>